## vim:ft=screen
autodetach on
bell_msg "^GBell in window %n"
defflow off
deflogin on
defmode 0600
defscrollback 1024
defshell zsh
defutf8 on
idle off
msgwait 2
shelltitle '> |zsh'
startup_message off
vbell off

bind ^X
bind x remove
bind X lockscreen
bind ^S
bind s split
bind ^Q
bind q

bindkey -k k1 select 0
bindkey -k k2 select 1
bindkey -k k3 select 2
bindkey -k k4 select 3
bindkey -k k5 select 4
bindkey -k k6 select 5
bindkey -k k7 select 6
bindkey -k k8 select 7
bindkey -k k9 select 8

backtick 42 0 0 /home/derf/packages/screen/include/screen.pl
caption splitonly "%{= dy} %=%-Lw [%n%f %t] %+Lw "
hardstatus alwayslastline "%{dr}%H %{dy} load %l %{dg} %D %d.%m.%Y %0c %{= dc} %=%42`"
sorendition "= bd"

## vim:ft=screen

screen -t IRC irssi
screen -t Jabber mcabber
select 0
split
focus down
select 1
focus up

# Press F11 to organize everything after attaching
bindkey -k F1 source /home/derf/packages/screen/include/aneu-start
# F12 for detaching
bindkey -k F2 source /home/derf/packages/screen/include/aneu-stop
