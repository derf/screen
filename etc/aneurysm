## vim:ft=screen

screen -t IRC irssi
screen -t Jabber mcabber
select 0
split
focus down
select 1
focus up

# Press F11 to organize everything after attaching
bindkey -k F1 source /home/derf/packages/screen/include/aneu-start
# F12 for detaching
bindkey -k F2 source /home/derf/packages/screen/include/aneu-stop
