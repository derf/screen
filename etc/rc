## vim:ft=screen
autodetach on
defflow off
defmode 0600
defutf8 on
nethack on
shell zsh
startup_message off
vbell off
bell_msg "^GBell in window %n"

backtick 42 0 0 /home/derf/packages/screen/include/screen.pl
caption always "%{= dy} %=%-Lw [%n%f %t] %+Lw "
hardstatus alwayslastline "%{dr}%H %{dy} load %l %{dg} %D %d.%m.%Y %0c %{= dc} %=%42`"
sorendition "= bd"

